<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pc.kaizer.netbank.IssueChequebookFragment"
    android:paddingTop="?android:attr/actionBarSize"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D E L I V E R Y  A D D R E S S"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/addrcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addr"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="ADDRESS CONTENT HERE"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/chkbkno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addrcontent"
        android:text="C H E Q U E B O O K  N O ."
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/chqno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chkbkno"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/requestchqbk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Request Chequebook"
        android:textAlignment="center"
        android:textColor="@color/White" />


</RelativeLayout>
